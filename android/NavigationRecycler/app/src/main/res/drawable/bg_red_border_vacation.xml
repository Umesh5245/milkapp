<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp"/>
            <solid android:color="#f2ecec"/>
            <stroke android:width="@dimen/_1sdp" android:color="#f53727"/>
        </shape>
    </item>
    <item android:gravity="bottom" android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/_4sdp" android:bottomRightRadius="@dimen/_4sdp"/>
            <solid android:color="#f53727"/>
            <size android:height="@dimen/_4sdp"/>
        </shape>
    </item>
</layer-list>
