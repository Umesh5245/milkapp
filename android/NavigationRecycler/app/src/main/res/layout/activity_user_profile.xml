<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_profile_bkg"
    tools:context=".UserProfileActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:cardCornerRadius="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Mayank Singh"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:layout_marginLeft="10sp"
                    android:paddingTop="6sp"
                    android:src="@drawable/pencil" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"


                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"

                android:layout_marginTop="30sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/user_profile_details"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/montserrat_light"
                    android:maxWidth="200sp"
                    android:text="mayank1708@gmail.com"

                    android:textSize="13sp"


                    />

                <ImageView


                    android:layout_width="23sp"
                    android:layout_height="23sp"
                    android:src="@drawable/pencil" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"

                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/user_profile_details"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Mobile"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/montserrat_light"
                    android:maxWidth="200sp"
                    android:text="8469514210"

                    android:textSize="13sp"


                    />

                <ImageView


                    android:layout_width="23sp"

                    android:layout_height="23sp"
                    android:src="@drawable/pencil" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"

                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/user_profile_details"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat_light"
                    android:text="Hostel-A,room-510,Marwadi Univeisty"


                    android:textSize="13sp"


                    />

                <ImageView


                    android:layout_width="0sp"
                    android:layout_height="23sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="0.5"
                    android:src="@drawable/pencil" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"

                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/user_profile_details"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="D.O.B"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50sp"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/montserrat_light"
                    android:maxWidth="200sp"
                    android:text="17/08/98"

                    android:textSize="13sp"


                    />

                <ImageView

                    android:layout_width="23sp"
                    android:layout_height="23sp"

                    android:src="@drawable/pencil" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70sp"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Update"
        android:background="#34eb8c"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="70sp"
        android:padding="10sp"
        android:src="@drawable/person"
        android:background="@drawable/user_profile_circle_bkg"
        android:translationZ="3sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>